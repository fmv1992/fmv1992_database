#! /usr/bin/env bash

# Halt on error.
set -euo pipefail

source other/bin/common

check_all_env_vars_are_set ALEMBIC_MESSAGE POSTGRES_DB POSTGRES_HOST POSTGRES_PASSWORD POSTGRES_USER

set -x
python3 -m alembic --config ./code/alembic.ini revision --autogenerate --message "${ALEMBIC_MESSAGE}"
set +x

# vim: set filetype=sh fileformat=unix nowrap:
